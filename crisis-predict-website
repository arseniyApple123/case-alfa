            "–¢–æ–Ω–≥–∞", "–ö–∏—Ä–∏–±–∞—Ç–∏", "–ú–∏–∫—Ä–æ–Ω–µ–∑–∏—è", "–ú–∞—Ä—à–∞–ª–ª–æ–≤—ã –æ—Å—Ç—Ä–æ–≤–∞", "–ü–∞–ª–∞—É", "–ù–∞—É—Ä—É", "–¢—É–≤–∞–ª—É", "–í–∞—Ç–∏–∫–∞–Ω"
        ];

        function generateCountryData(baseYear, countryName) {
            const data = {};
            const baseGDP = 0.05 + Math.random() * 0.2;
            const baseGDPPerCapita = 1 + Math.random() * 5;
            const baseUnemployment = 4 + Math.random() * 10;
            const baseInflation = 2 + Math.random() * 8;
            const baseDebt = 30 + Math.random() * 40;
            const baseReserves = 1 + Math.random() * 10;

            YEARS.forEach((year, index) => {
                const growthFactor = 1 + (index * 0.02);
                const covidEffect = year === 2020 ? 0.9 : 1;

                data[year] = {
                    gdp: baseGDP * growthFactor * covidEffect,
                    gdpPerCapita: baseGDPPerCapita * (1 + index * 0.015) * covidEffect,
                    unemployment: baseUnemployment * (year === 2020 ? 1.3 : 1) * (year >= 2022 ? 0.95 : 1),
                    inflation: baseInflation * (year === 2022 ? 1.5 : 1) * (year >= 2023 ? 0.9 : 1),
                    debt: baseDebt * (1 + index * 0.005) * (year >= 2022 ? 1.05 : 1),
                    reserves: baseReserves * (1 + index * 0.03) * covidEffect
                };
            });
            return data;
        }

        allCountryNames.forEach(countryName => {
            if (!countriesData.find(c => c.country === countryName)) {
                countriesData.push({
                    country: countryName,
                    code: countryName.substring(0, 3).toUpperCase(),
                    data: generateCountryData(2020, countryName)
                });
            }
        });

        const thresholdValues = {
            gdp: 0.5,
            gdpPerCapita: 15.0,
            unemployment: 8.0,
            inflation: 5.0,
            debt: 70.0,
            reserves: 50.0
        };

        let charts = {};

        function showError(message, suggestions = []) {
            const errorDiv = document.getElementById('error-message');
            const errorText = document.getElementById('error-text');
            const suggestionButtons = document.getElementById('suggestion-buttons');
            
            errorText.textContent = message;
            suggestionButtons.innerHTML = '';
            
            if (suggestions.length > 0) {
                suggestions.forEach(country => {
                    const btn = document.createElement('span');
                    btn.className = 'suggestion-item';
                    btn.textContent = country;
                    btn.onclick = () => {
                        document.getElementById('country-input').value = country;
                        errorDiv.style.display = 'none';
                        analyzeCountry();
                    };
                    suggestionButtons.appendChild(btn);
                });
            }
            
            errorDiv.style.display = 'block';
            document.getElementById('loading').style.display = 'none';
            document.getElementById('results-container').style.display = 'none';
        }

        const countryInput = document.getElementById('country-input');
        const suggestionsDiv = document.getElementById('suggestions');

        countryInput.addEventListener('input', function() {
            const value = this.value.toLowerCase().trim();
            if (value.length < 1) {
                suggestionsDiv.style.display = 'none';
                return;
            }

            const matches = countriesData.filter(c => 
                c.country.toLowerCase().includes(value)
            ).slice(0, 10);

            if (matches.length > 0) {
                suggestionsDiv.innerHTML = matches.map(c => 
                    `<div class="suggestion-item" onclick="selectCountry('${c.country}')">${c.country}</div>`
                ).join('');
                suggestionsDiv.style.display = 'block';
            } else {
                suggestionsDiv.style.display = 'none';
            }
        });

        document.addEventListener('click', function(e) {
            if (!countryInput.contains(e.target) && !suggestionsDiv.contains(e.target)) {
                suggestionsDiv.style.display = 'none';
            }
        });

        function selectCountry(country) {
            countryInput.value = country;
            suggestionsDiv.style.display = 'none';
        }

        function getCrisisColor(minusCount) {
            if (minusCount <= 1) return { bg: '#4caf50', text: '–ù–ò–ó–ö–ò–ô –£–†–û–í–ï–ù–¨ (0-1 –º–∏–Ω—É—Å)' };
            if (minusCount == 2) return { bg: '#ffc107', text: '–°–†–ï–î–ù–ò–ô –£–†–û–í–ï–ù–¨ (2 –º–∏–Ω—É—Å–∞)' };
            if (minusCount == 3) return { bg: '#ff9800', text: '–í–´–°–û–ö–ò–ô –£–†–û–í–ï–ù–¨ (3 –º–∏–Ω—É—Å–∞)' };
            if (minusCount == 4) return { bg: '#f44336', text: '–ö–†–ò–¢–ò–ß–ï–°–ö–ò–ô –£–†–û–í–ï–ù–¨ (4 –º–∏–Ω—É—Å–∞)' };
            if (minusCount == 5) return { bg: '#8B4513', text: '–ì–õ–£–ë–û–ö–ò–ô –ö–†–ò–ó–ò–° (5 –º–∏–Ω—É—Å–æ–≤)' };
            return { bg: '#5D3A1A', text: '–ö–ê–¢–ê–°–¢–†–û–§–ê (6 –º–∏–Ω—É—Å–æ–≤)' };
        }

        function compareWithThreshold(countryYearData) {
            const results = [];
            let minusCount = 0;

            const gdpResult = countryYearData.gdp >= thresholdValues.gdp ? '+' : '-';
            if (gdpResult === '-') minusCount++;
            results.push({ name: '–í–í–ü (—Ç—Ä–ª–Ω $)', value: countryYearData.gdp, threshold: thresholdValues.gdp, sign: gdpResult });

            const gdpPerCapitaResult = countryYearData.gdpPerCapita >= thresholdValues.gdpPerCapita ? '+' : '-';
            if (gdpPerCapitaResult === '-') minusCount++;
            results.push({ name: '–í–í–ü –Ω–∞ –¥—É—à—É (—Ç—ã—Å $)', value: countryYearData.gdpPerCapita, threshold: thresholdValues.gdpPerCapita, sign: gdpPerCapitaResult });

            const unemploymentResult = countryYearData.unemployment <= thresholdValues.unemployment ? '+' : '-';
            if (unemploymentResult === '-') minusCount++;
            results.push({ name: '–ë–µ–∑—Ä–∞–±–æ—Ç–∏—Ü–∞ (%)', value: countryYearData.unemployment, threshold: thresholdValues.unemployment, sign: unemploymentResult });

            const inflationResult = countryYearData.inflation <= thresholdValues.inflation ? '+' : '-';
            if (inflationResult === '-') minusCount++;
            results.push({ name: '–ò–Ω—Ñ–ª—è—Ü–∏—è (%)', value: countryYearData.inflation, threshold: thresholdValues.inflation, sign: inflationResult });

            const debtResult = countryYearData.debt <= thresholdValues.debt ? '+' : '-';
            if (debtResult === '-') minusCount++;
            results.push({ name: '–ì–æ—Å–¥–æ–ª–≥ (% –í–í–ü)', value: countryYearData.debt, threshold: thresholdValues.debt, sign: debtResult });

            const reservesResult = countryYearData.reserves >= thresholdValues.reserves ? '+' : '-';
            if (reservesResult === '-') minusCount++;
            results.push({ name: '–†–µ–∑–µ—Ä–≤—ã (–º–ª—Ä–¥ $)', value: countryYearData.reserves, threshold: thresholdValues.reserves, sign: reservesResult });

            return { results, minusCount };
        }

        function destroyCharts() {
            Object.values(charts).forEach(chart => {
                if (chart) chart.destroy();
            });
            charts = {};
        }

        function createAllCharts(countryData, countryName, results) {
            const chartConfig = {
                type: 'line',
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { font: { size: 9 } }
                        },
                        x: {
                            ticks: { 
                                font: { size: 8 },
                                maxRotation: 45,
                                minRotation: 45
                            }
                        }
                    }
                }
            };

            charts.gdp = new Chart(document.getElementById('gdp-chart'), {
                ...chartConfig,
                data: {
                    labels: YEARS,
                    datasets: [
                        { data: YEARS.map(y => countryData[y].gdp), borderColor: '#1a3a5e', backgroundColor: 'rgba(26,58,94,0.1)', tension: 0.4 },
                        { data: YEARS.map(() => thresholdValues.gdp), borderColor: '#4caf50', borderDash: [5, 5], tension: 0.4 }
                    ]
                }
            });

            charts.gdpPerCapita = new Chart(document.getElementById('gdp-per-capita-chart'), {
                ...chartConfig,
                data: {
                    labels: YEARS,
                    datasets: [
                        { data: YEARS.map(y => countryData[y].gdpPerCapita), borderColor: '#1a3a5e', backgroundColor: 'rgba(26,58,94,0.1)', tension: 0.4 },
                        { data: YEARS.map(() => thresholdValues.gdpPerCapita), borderColor: '#4caf50', borderDash: [5, 5], tension: 0.4 }
                    ]
                }
            });

            charts.unemployment = new Chart(document.getElementById('unemployment-chart'), {
                ...chartConfig,
                data: {
                    labels: YEARS,
                    datasets: [
                        { data: YEARS.map(y => countryData[y].unemployment), borderColor: '#1a3a5e', backgroundColor: 'rgba(26,58,94,0.1)', tension: 0.4 },
                        { data: YEARS.map(() => thresholdValues.unemployment), borderColor: '#4caf50', borderDash: [5, 5], tension: 0.4 }
                    ]
                }
            });

            charts.inflation = new Chart(document.getElementById('inflation-chart'), {
                ...chartConfig,
                data: {
                    labels: YEARS,
                    datasets: [
                        { data: YEARS.map(y => countryData[y].inflation), borderColor: '#1a3a5e', backgroundColor: 'rgba(26,58,94,0.1)', tension: 0.4 },
                        { data: YEARS.map(() => thresholdValues.inflation), borderColor: '#4caf50', borderDash: [5, 5], tension: 0.4 }
                    ]
                }
            });

            charts.debt = new Chart(document.getElementById('debt-chart'), {
                ...chartConfig,
                data: {
                    labels: YEARS,
                    datasets: [
                        { data: YEARS.map(y => countryData[y].debt), borderColor: '#1a3a5e', backgroundColor: 'rgba(26,58,94,0.1)', tension: 0.4 },
                        { data: YEARS.map(() => thresholdValues.debt), borderColor: '#4caf50', borderDash: [5, 5], tension: 0.4 }
                    ]
                }
            });

            charts.reserves = new Chart(document.getElementById('reserves-chart'), {
                ...chartConfig,
                data: {
                    labels: YEARS,
                    datasets: [
                        { data: YEARS.map(y => countryData[y].reserves), borderColor: '#1a3a5e', backgroundColor: 'rgba(26,58,94,0.1)', tension: 0.4 },
                        { data: YEARS.map(() => thresholdValues.reserves), borderColor: '#4caf50', borderDash: [5, 5], tension: 0.4 }
                    ]
                }
            });

            const comparisonConfig = {
                type: 'bar',
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { font: { size: 9 } }
                        }
                    }
                }
            };

            charts.gdpComparison = new Chart(document.getElementById('gdp-comparison-chart'), {
                ...comparisonConfig,
                data: {
                    labels: [countryName, '–ü–æ—Ä–æ–≥'],
                    datasets: [{
                        data: [results[0].value, results[0].threshold],
                        backgroundColor: [results[0].sign === '+' ? '#4caf50' : '#f44336', '#1a3a5e'],
                        borderRadius: 5
                    }]
                }
            });

            charts.gdpPerCapitaComparison = new Chart(document.getElementById('gdp-per-capita-comparison-chart'), {
                ...comparisonConfig,
                data: {
                    labels: [countryName, '–ü–æ—Ä–æ–≥'],
                    datasets: [{
                        data: [results[1].value, results[1].threshold],
                        backgroundColor: [results[1].sign === '+' ? '#4caf50' : '#f44336', '#1a3a5e'],
                        borderRadius: 5
                    }]
                }
            });

            charts.unemploymentComparison = new Chart(document.getElementById('unemployment-comparison-chart'), {
                ...comparisonConfig,
                data: {
                    labels: [countryName, '–ü–æ—Ä–æ–≥'],
                    datasets: [{
                        data: [results[2].value, results[2].threshold],
                        backgroundColor: [results[2].sign === '+' ? '#4caf50' : '#f44336', '#1a3a5e'],
                        borderRadius: 5
                    }]
                }
            });

            charts.inflationComparison = new Chart(document.getElementById('inflation-comparison-chart'), {
                ...comparisonConfig,
                data: {
                    labels: [countryName, '–ü–æ—Ä–æ–≥'],
                    datasets: [{
                        data: [results[3].value, results[3].threshold],
                        backgroundColor: [results[3].sign === '+' ? '#4caf50' : '#f44336', '#1a3a5e'],
                        borderRadius: 5
                    }]
                }
            });

            charts.debtComparison = new Chart(document.getElementById('debt-comparison-chart'), {
                ...comparisonConfig,
                data: {
                    labels: [countryName, '–ü–æ—Ä–æ–≥'],
                    datasets: [{
                        data: [results[4].value, results[4].threshold],
                        backgroundColor: [results[4].sign === '+' ? '#4caf50' : '#f44336', '#1a3a5e'],
                        borderRadius: 5
                    }]
                }
            });

            charts.reservesComparison = new Chart(document.getElementById('reserves-comparison-chart'), {
                ...comparisonConfig,
                data: {
                    labels: [countryName, '–ü–æ—Ä–æ–≥'],
                    datasets: [{
                        data: [results[5].value, results[5].threshold],
                        backgroundColor: [results[5].sign === '+' ? '#4caf50' : '#f44336', '#1a3a5e'],
                        borderRadius: 5
                    }]
                }
            });
        }

        function analyzeCountry() {
            const countryName = document.getElementById('country-input').value.trim();
            const year = parseInt(document.getElementById('year-select').value);

            document.getElementById('error-message').style.display = 'none';

            if (!countryName) {
                showError('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Å—Ç—Ä–∞–Ω—ã');
                return;
            }

            let country = countriesData.find(c => 
                c.country.toLowerCase() === countryName.toLowerCase()
            );

            if (!country) {
                const possibleMatches = countriesData.filter(c => 
                    c.country.toLowerCase().includes(countryName.toLowerCase())
                );

                if (possibleMatches.length === 1) {
                    country = possibleMatches[0];
                } else if (possibleMatches.length > 1) {
                    const suggestions = possibleMatches.slice(0, 5).map(c => c.country);
                    showError(`–°—Ç—Ä–∞–Ω–∞ "${countryName}" –Ω–µ –Ω–∞–π–¥–µ–Ω–∞. –í–æ–∑–º–æ–∂–Ω–æ, –≤—ã –∏–º–µ–ª–∏ –≤ –≤–∏–¥—É:`, suggestions);
                    return;
                } else {
                    const randomSuggestions = countriesData
                        .sort(() => 0.5 - Math.random())
                        .slice(0, 5)
                        .map(c => c.country);
                    showError(`–°—Ç—Ä–∞–Ω–∞ "${countryName}" –Ω–µ –Ω–∞–π–¥–µ–Ω–∞. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –≤–≤–µ—Å—Ç–∏ –¥—Ä—É–≥–æ–µ –Ω–∞–∑–≤–∞–Ω–∏–µ. –ü—Ä–∏–º–µ—Ä—ã —Å—Ç—Ä–∞–Ω:`, randomSuggestions);
                    return;
                }
            }

            document.getElementById('loading').style.display = 'block';
            document.getElementById('results-container').style.display = 'none';

            setTimeout(() => {
                try {
                    const countryYearData = country.data[year];
                    
                    if (!countryYearData) {
                        showError(`–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –¥–ª—è ${country.country} –∑–∞ ${year} –≥–æ–¥`);
                        return;
                    }

                    const { results, minusCount } = compareWithThreshold(countryYearData);
                    const crisis = getCrisisColor(minusCount);

                    document.getElementById('selected-country-name').textContent = `üåç ${country.country}`;
                    document.getElementById('selected-year').textContent = `–≠–∫–æ–Ω–æ–º–∏—á–µ—Å–∫–∏–π –∞–Ω–∞–ª–∏–∑ ${year} –≥–æ–¥`;

                    document.getElementById('crisis-card').style.background = crisis.bg;
                    document.getElementById('crisis-level').textContent = crisis.text;
                    document.getElementById('minus-count').textContent = `–ú–∏–Ω—É—Å–æ–≤: ${minusCount} –∏–∑ 6`;

                    const metricsList = document.getElementById('metrics-list');
                    metricsList.innerHTML = results.map((r, i) => {
                        let signText = '';
                        if (r.name.includes('–í–í–ü') && !r.name.includes('–¥—É—à—É')) signText = r.sign === '+' ? '–í–´–®–ï –ü–û–†–û–ì–ê' : `–ù–ò–ñ–ï –ü–û–†–û–ì–ê (${thresholdValues.gdp.toFixed(2)} —Ç—Ä–ª–Ω $)`;
                        else if (r.name.includes('–í–í–ü –Ω–∞ –¥—É—à—É')) signText = r.sign === '+' ? '–í–´–®–ï –ü–û–†–û–ì–ê' : `–ù–ò–ñ–ï –ü–û–†–û–ì–ê (${thresholdValues.gdpPerCapita.toFixed(2)} —Ç—ã—Å $)`;
                        else if (r.name.includes('–ë–µ–∑—Ä–∞–±–æ—Ç–∏—Ü–∞')) signText = r.sign === '+' ? '–í –ü–†–ï–î–ï–õ–ê–• –ù–û–†–ú–´' : `–ü–†–ï–í–´–®–ï–ù–ò–ï (> ${thresholdValues.unemployment.toFixed(2)}%)`;
                        else if (r.name.includes('–ò–Ω—Ñ–ª—è—Ü–∏—è')) signText = r.sign === '+' ? '–í –ü–†–ï–î–ï–õ–ê–• –ù–û–†–ú–´' : `–ü–†–ï–í–´–®–ï–ù–ò–ï (> ${thresholdValues.inflation.toFixed(2)}%)`;
                        else if (r.name.includes('–ì–æ—Å–¥–æ–ª–≥')) signText = r.sign === '+' ? '–í –ü–†–ï–î–ï–õ–ê–• –ù–û–†–ú–´' : `–ü–†–ï–í–´–®–ï–ù–ò–ï (> ${thresholdValues.debt.toFixed(2)}%)`;
                        else if (r.name.includes('–†–µ–∑–µ—Ä–≤—ã')) signText = r.sign === '+' ? '–î–û–°–¢–ê–¢–û–ß–ù–û' : `–ù–ï–î–û–°–¢–ê–¢–û–ß–ù–û (< ${thresholdValues.reserves.toFixed(2)} –º–ª—Ä–¥ $)`;
                        
                        return `
                            <div class="metric-item">
                                <div class="metric-header">
                                    <span class="metric-name">${i+1}. ${r.name}</span>
                                    <div class="metric-values">
                                        <span class="metric-value" style="color: ${r.sign === '+' ? '#4caf50' : '#f44336'}">${r.value.toFixed(2)}</span>
                                        <span class="metric-threshold">(–ø–æ—Ä–æ–≥: ${r.threshold.toFixed(2)})</span>
                                        <span class="metric-sign ${r.sign === '+' ? 'positive' : 'negative'}">${r.sign}</span>
                                    </div>
                                </div>
                                <div class="metric-description ${r.sign === '+' ? 'positive' : 'negative'}">
                                    ${signText}
                                </div>
                            </div>
                        `;
                    }).join('');

                    document.getElementById('threshold-info').innerHTML = `
                        <h4>üéØ –ü–û–†–û–ì–û–í–´–ï –ó–ù–ê–ß–ï–ù–ò–Ø –î–õ–Ø –û–¶–ï–ù–ö–ò</h4>
                        <p>‚Ä¢ –í–í–ü: –º–∏–Ω–∏–º—É–º ${thresholdValues.gdp.toFixed(2)} —Ç—Ä–ª–Ω $</p>
                        <p>‚Ä¢ –í–í–ü –Ω–∞ –¥—É—à—É: –º–∏–Ω–∏–º—É–º ${thresholdValues.gdpPerCapita.toFixed(2)} —Ç—ã—Å $</p>
                        <p>‚Ä¢ –ë–µ–∑—Ä–∞–±–æ—Ç–∏—Ü–∞: –º–∞–∫—Å–∏–º—É–º ${thresholdValues.unemployment.toFixed(2)}%</p>
                        <p>‚Ä¢ –ò–Ω—Ñ–ª—è—Ü–∏—è: –º–∞–∫—Å–∏–º—É–º ${thresholdValues.inflation.toFixed(2)}%</p>
                        <p>‚Ä¢ –ì–æ—Å–¥–æ–ª–≥: –º–∞–∫—Å–∏–º—É–º ${thresholdValues.debt.toFixed(2)}% –í–í–ü</p>
                        <p>‚Ä¢ –†–µ–∑–µ—Ä–≤—ã: –º–∏–Ω–∏–º—É–º ${thresholdValues.reserves.toFixed(2)} –º–ª—Ä–¥ $</p>
                    `;

                    destroyCharts();
                    createAllCharts(country.data, country.country, results);

                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('results-container').style.display = 'block';
                    
                } catch (error) {
                    showError('–û—à–∏–±–∫–∞ –ø—Ä–∏ –∞–Ω–∞–ª–∏–∑–µ –¥–∞–Ω–Ω—ã—Ö: ' + error.message);
                }
            }, 500);
        }
    </script>
</body>
</html>
